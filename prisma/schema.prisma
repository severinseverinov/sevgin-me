generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  name        String?
  role        String    @default("SUPER_ADMIN") // SUPER_ADMIN | EDITOR | VIEWER
  permissions String    @default("[]")           // JSON array of allowed admin page keys
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  apps        UserApp[]
}


model PortfolioItem {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String?  // Rich text or markdown content
  imageUrl    String?
  link        String?
  tags        String   @default("") // Comma-separated tags
  isPublished Boolean  @default(false)
  order       Int      @default(0)  // To control display order
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Page {
  id          String   @id @default(cuid())
  slug        String   @unique // e.g., 'about', 'home'
  title       String
  content     String?  // The actual page content
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSettings {
  id               String   @id @default("singleton")
  profileImageUrl  String?
  githubUrl        String?
  linkedinUrl      String?
  twitterUrl       String?
  emailAddress     String   @default("contact@sevginserbest.com")
  footerTagline    String   @default("Building for the web.")
  updatedAt        DateTime @updatedAt
}

model Skill {
  id       String @id @default(cuid())
  name     String
  category String // language, frontend, backend, database, devops
  order    Int    @default(0)
}

model Experience {
  id          String @id @default(cuid())
  year        String
  title       String
  description String
  order       Int    @default(0)
}

model App {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  icon        String?   // emoji or icon identifier
  type        String    @default("internal") // "internal" | "external"
  url         String?   // path for internal (/portal/apps/slug) or full URL for external
  color       String?   // hex color for card accent
  isPublished Boolean   @default(true)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userAccess  UserApp[]
}

model UserApp {
  userId String
  appId  String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  app    App    @relation(fields: [appId], references: [id], onDelete: Cascade)
  @@id([userId, appId])
}
